:root {
--primary200: #9CFC97
--secondary400: #F2AF29
--book-color: #65def1
--heart-color: #e086d3
--arrow-color: #F2AF29
}

body
  margin: 0
  padding: 0
  background: #000000;
  background: -webkit-linear-gradient(to top, #434343, #000000);
  background: linear-gradient( to top, #434343, #000000);
  background-repeat: no-repeat
  background-attachment: fixed
  color: #fff

body *, body *::after, body *::before
  box-sizing: border-box
ul 
  margin: 0
  padding: 0
  list-style: none
h1
  margin: 0
a
  transition: all .3s ease-in-out
a, a:link, a:visited
  text-decoration: none
  color: var(--primary200)
  font-size: 1.2rem
a:hover, a:focus
  color: var(--book-color)
#app
  font-family 'Commissioner', Helvetica, Arial, sans-serif
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  align-items: center;
  margin-top 60px
  display: flex
  flex-direction: column
  height: 100vh
  max-height: 100vh
  width: 90vw
  max-width: 600px
  margin: 0 auto
.container
  padding: 1rem 0
  // border: 1px solid var(--secondary400)
.page-header
  color: var(--secondary400)
.left-icon
  margin-right: .5rem
.icon-heart
  color: var(--heart-color)
.icon-arrow
  color: var(--arrow-color)
.icon-book
  color: var(--book-color)
.full-width
  width: 100%
h2.page-subtitle
  color: var(--secondary400)
  font-size: 1.4rem